<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.BTLCK_LTDD_Nhom6" parent="Theme.Material3.DayNight.NoActionBar" />

    <style name="MenuCardStyle" parent="Widget.Material3.CardView.Elevated">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">4dp</item>
    </style>

    <style name="MenuCardContentStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="MenuIconStyle">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:tint">@color/purple_500</item>
    </style>

    <style name="MenuTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
    </style>
</resources>